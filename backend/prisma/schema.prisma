generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  STUDENT
  FACULTY
  ADMIN
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  name     String?
  role	   Role
  projects Project[]
  applications Application[]
}

model Project {
  id            String      @id @default(uuid())
  title         String
  description   String
  researchArea  String
  startDate     DateTime
  endDate       DateTime
  faculty       User        @relation(fields: [facultyId], references: [id])
  facultyId     String
  applications  Application[]
}


model Application {
  id             String      @id @default(uuid())
  student        User        @relation(fields: [studentId], references: [id])
  studentId      String
  project        Project     @relation(fields: [projectId], references: [id])
  projectId      String
  status         String
  submissionDate DateTime
  comments       String?
  feedback       Feedback?
}

model Feedback {
  id             String       @id @default(uuid())
  content        String
  date           DateTime
  application    Application  @relation(fields: [applicationId], references: [id])
  applicationId  String @unique
}